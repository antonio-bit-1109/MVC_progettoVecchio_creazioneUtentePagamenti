@model IEnumerable<MVC_progettoVecchio.Models.Dipendente>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p class="btn btn-primary">
        @Html.ActionLink("Crea Nuovo Utente", "Create", "Utente", new { @style = "text-decoration: none" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdUtente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indirizzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodiceFiscale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coniugato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroFigli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mansione)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.IdUtente)*@
                    @item.IdUtente
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Nome)*@
                    @item.Nome
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cognome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Indirizzo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodiceFiscale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coniugato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroFigli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mansione)
                </td>
                <td>

                    <div class="d-inline-block mx-3">
                        @Html.ActionLink("Seleziona Per Modificare", "Edit", new { id = item.IdUtente }, new { @style = "text-decoration: none" }) 
                    </div>
                    |
                    <div class="d-inline-block mx-3">
                        @Html.ActionLink("Visualizza Dettagli", "Dettagli", new { id = item.IdUtente }, new { @style = "text-decoration: none" }) 
                    </div>
                    |
                    <div class="d-inline-block mx-3">
                        @Html.ActionLink("Cancella", "Delete", new { id = item.IdUtente }, new { @style = "text-decoration: none" })
                    </div>
                                                
                </td>
            </tr>
        }

    </table>
</body>
</html>
